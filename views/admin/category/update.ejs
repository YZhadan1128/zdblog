<%- include('../layout')%>
<div class="container-fluid">

  <ol class="breadcrumb">
    <li><a href="javascript:;">分类首页</a></li>
    <li class="active">分类修改</li>
  </ol>
  <h3>分类修改 - <%= category %></h3>

  <!-- form  表单如果不写action 则默认提交方式是  不改变当前地址 -->
  <form method="post">
    <div class="form-group">
      <label>分类名称</label>
      <input type="text" class="form-control" name="category" value="<%= category %>">
    </div>

    <button type="submit" class="btn btn-default">点击修改分类名称</button>
  </form>
</div>
