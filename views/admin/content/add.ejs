<%- include('../layout')%>
<div class="container-fluid">
  <ol class="breadcrumb">
    <li><a href="javascript:;">内容首页</a></li>
    <li class="active">内容添加</li>
  </ol>
  <h3>内容添加</h3>

  <form method="post">
    <div class="form-group">
      <label>分类</label>
      <select name="category" class="form-control" >
        <% for(let i=0;i<results.length;i++){ %>
          <option value="<%= results[i]._id %>"><%= results[i].name %></option>
        <% } %>
      </select>
    </div>

    <div class="form-group">
      <label for="contentTitle">标题：</label>
      <input type="text" class="form-control" name="title" placeholder="请输入内容标题">
    </div>

    <div class="form-group">
      <label for="contentTitle">简介：</label>
      <textarea type="text" class="form-control" rows='2' name="description" placeholder="请输入内容简介"></textarea>
    </div>
    <div class="form-group">
      <label for="contentTitle">内容：</label>
      <textarea type="text" class="form-control" rows='6' name="content" placeholder="请输入内容主体"></textarea>
    </div>
    <button type="submit" class="btn btn-default">点击添加内容</button>
  </form>

</div>
